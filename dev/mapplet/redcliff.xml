<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="赤壁之战" 
             description="赤壁之战的历史地图"
             author="googlecode"
             author_email="redcliff@gmail.com">
  <Require feature="sharedmap"/>
  <Require feature="dynamic-height" /> 
</ModulePrefs>
<Content type="html"><![CDATA[

<link rel="stylesheet" type="text/css" href="http://redcliff.googlecode.com/svn/trunk/dev/media/redcliff.css?bpc=121"></link>
<!-- NOTE: Add "?bpc=<radnom>" to by pass the cache for the css file. -->

<!-- Show this gif when loading -->
<div id="loading" style="color:#AAA;text-align:center;margin-top:40px;font-size:12px;"><img src="http://redcliff.googlecode.com/svn/trunk/dev/images/pie_32.gif"><br><br>&nbsp;&nbsp;正在加载 ...</div>  

<!-- Hide first when loading -->
<div id="main" style="z-index:10;display:none;">  

  <div class="dropdown-box">
    <span>选择地图: </span>
    <select id="select_tiles">
      <option value="1.0">历史地图</option>
      <option value="0.5">半透明层叠</option>
      <option value="0.0">现代地图</option>
    </select>
  </div>

  <div class="tab-head">
	<div class="tab-item tab-item-inactive" id="events_tab">历史事件</div>
	<div class="tab-item tab-item-active" id="characters_tab">人物介绍</div>
	<div class="tab-item tab-item-inactive" id="vote_tab">人物投票</div>
  </div>
	  
  <div class="tab-content" id="tabContent">
    <div id="events_cnt" style="display:none;">
      <div id="unused_bar"><!-- TODO may need to add some text in this bar --></div>
      <div id="big_event_list" ></div>
    </div>
    <div id="characters_cnt">
      <div id="kingdom_checkbox">
        <label for="checkbox_wei">曹操军</label><input id="checkbox_wei" type="checkbox" checked>
        <label for="checkbox_wu">孙权军</label><input id="checkbox_wu" type="checkbox" checked>
        <label for="checkbox_shu">刘备军</label><input id="checkbox_shu" type="checkbox" checked>
      </div>
      <div id="character_list"></div>
    </div>
    <div id="vote_cnt" style="display:none;">
      <div id="unused_bar"></div>
      <iframe class="vote-ifr" src="http://redcliffvote.appspot.com/"></iframe>
    </div>

  </div>
  <div class="bottom-button-div">
    <a href='#' id="clear_button">清除地图上的标志</a>
    <span id="share_button"></span>
  </div>
  
</div>

<div style="height:2em;"></div>

<script src="http://redcliff.googlecode.com/svn/trunk/dev/javascript/jquery.js" type="text/javascript"></script>
<script src="http://redcliff.googlecode.com/svn/trunk/dev/javascript/jquery.ui.js" type="text/javascript"></script>
