<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="赤壁之战" 
             description="赤壁之战的历史地图"
             author="googlecode"
             author_email="redcliff@gmail.com">
  <Require feature="sharedmap"/>
  <Require feature="dynamic-height" /> 
</ModulePrefs>
<Content type="html"><![CDATA[

<link rel="stylesheet" type="text/css" href="http://redcliff.googlecode.com/svn/trunk/dev/media/redcliff.css?bpc=92"></link>
<!-- NOTE: Add "?bpc=<radnom>" to by pass the cache for the css file. -->

<!-- Show this gif when loading -->
<div id="loading" style="color:#AAA;text-align:center;margin-top:40px;font-size:12px;"><img src="http://redcliff.googlecode.com/svn/trunk/dev/images/pie_32.gif"><br><br>&nbsp;&nbsp;正在加载 ...</div>  

<!-- Hide first when loading -->
<div id="main" style="z-index:10;display:none;">  

  <div class="dropdown-border">
    <select class="dropdown-box" id="select_tiles">
      <option value="1.0">历史地图</option>
      <option value="0.5">半透明层叠</option>
      <option value="0.0">现代地图</option>
    </select>
  </div>

  <div class="tab-content" id="tabContent">
    <div id="events_cnt" style="display:none;">
    <div class="tab-head">
      <div class="rc_id tab-item-active"><div class="tab-active">历史事件</div></div>
      <div class="rc_id tab-item-inactive"><div class="tab-inactive" id="shift_people">主要人物</div></div>
    </div>
    <div id="unused_bar"><!-- TODO may need to add some text in this bar --></div>
    <div id="big_event_list" ></div>
    </div>
    <div id="characters_cnt">
    <div class="tab-head">
      <div class="rc_id tab-item-inactive"><div class="tab-inactive" id="shift_event">历史事件</div></div>
      <div class="rc_id tab-item-active"><div class="tab-active">主要人物</div></div>
    </div>
    <div id="kingdom_checkbox">
      <label for="checkbox_wei">曹操军</label><input id="checkbox_wei" type="checkbox" checked>
      <label for="checkbox_wu">孙权军</label><input id="checkbox_wu" type="checkbox" checked>
      <label for="checkbox_shu">刘备军</label><input id="checkbox_shu" type="checkbox" checked>
    </div>
    <div id="character_list"></div>
    </div>
  </div>
  <div class="bottom-button-div">
    <span id="clear_button">清除地图上的箭头</span>
	<span id="share_button"></span>
  </div>
  
</div>

<div style="height:2em;"></div>

<script src="http://redcliff.googlecode.com/svn/trunk/dev/javascript/jquery.js" type="text/javascript"></script>
<script src="http://redcliff.googlecode.com/svn/trunk/dev/javascript/jquery.ui.js" type="text/javascript"></script>
<script src="http://redcliff.googlecode.com/svn/trunk/dev/javascript/redcliff.js?bpc=96" type="text/javascript"></script>
<!-- NOTE: Add "?bpc=<radnom>" to by pass the cache for the js file. -->

<!-- Functions for S2 button -->
<script>
  function _un(str) {return str.replace(/&([^;]+);/g, function(s,entity) {switch (entity) {case 'amp':return '&';case 'lt':return '<'; case 'gt':return '>';case 'quot':return '"';default:if (entity.charAt(0) == '#') {var n=Number('0' + entity.substr(1));if (!isNaN(n)){return String.fromCharCode(n);}}return s;}});};
  function loadS2(){var b=document.createElement('script');b.src='http://www.google.cn/s2/sharing/js?hl=zh_CN&jscallback=shareCallback';document.body.appendChild(b);};
  var shareCallback=function(){
    var g={
      'linkText': '将此地图分享给朋友',
	  'url': 'http://ditu.google.cn/maps/mpl?t=p&moduleurl=http://redcliff.googlecode.com/svn/trunk/mapplet/redcliff.xml',
      'title': '谷歌赤壁之战地图',
      'image': 'http://ditu.google.cn/intl/zh-CN_cn/images/maps_logo_beta_small.png',
      'subject_template': _un('{FROM}邀请您来看看谷歌赤壁之战地图'),
      'comments_template': _un('您的朋友（{FROM}）觉得您可能对这篇文章感兴趣，来看看吧：'),
      'description': '赤壁之战地图，谷歌团队倾情奉献，再现一千八百年前的大混战时代',
      'buttonStyle: 'link', 'tabs': 'email,email', 'popup': true, 'nopreview': true, 'noaddto': true, 'noThumbnail': true
	};
    new google.share.SharingWidget("share_button", g);
  };
</script>

]]></Content>
</Module>
